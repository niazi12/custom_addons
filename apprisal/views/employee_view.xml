<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_employee_tree" model="ir.ui.view">
        <field name="name">apprisal.employee.tree</field>
        <field name="model">apprisal.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="employeeID"/>
                <field name="age"/>
                <field name="address"/>
                <field name="designation"/>
                <field name="phone"/>
                <field name="email"/>

            </tree>
        </field>
    </record>

    <record id="create_employee_form" model="ir.ui.view">
        <field name="name">apprisal.employee.form</field>
        <field name="model">apprisal.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string = 'Personal Information'>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="image" widget='image' class='oe_avatar'/>
                            <field name="phone"/>
                            <field name="age"/>
                            <field name="address"/>
                            <field name="marital_status"/>
                            <field name="user_id"/>
                        </group>
                        <group string = 'Work information'>
                            <field name="employeeID"/>
                            <field name="email"/>
                            <field name="designation"/>
                            <field name="status"/>
                            <field name="work_phone"/>
                            <field name="joined_from"/>
                            <field name="work_hour_day"/>
                            <field name="total_week"/>
                            <field name="total_month_hours"/>
                        </group>
                        <group string = 'Citizenship'>
                            <field name="nationality"/>
                            <field name="identification"/>
                            <field name="passport"/>
                            <field name="place_of_birth"/>
                            
                        </group>
                    </group>
                    <notebook>
                        <page string="About">
                            <field name='about'/>
                        </page>
                        <page string="Appraisal List">
                            <field name='view_appraisal_ids'/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="create_employee_search" model="ir.ui.view">
        <field name="name">apprisal.employee.search</field>
        <field name="model">apprisal.employee</field>
        <field name="arch" type="xml">
            <search string="Doctor">
                <field name="name"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="age"/>
            </search>
        </field>
    </record>

    <record id="employee_view_create_kanban" model="ir.ui.view">
        <field name="name">apprisal.employee.kanban</field>
        <field name="model">apprisal.employee</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="designation"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_dropdown_kanban dropdown">
                            <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                <span class="fa fa-bars fa-lg"/>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                                <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                
                            </ul>
                        </div>
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <h1 class="o_kanban_record_title">
                                    <field name="name"/>
                                </h1>
                                <ul>
                                    <li>Gender :
                                        <field name="gender"/>
                                    </li>
                                    <li>Phone :
                                        <field name="phone"/>
                                    </li>                                   
                                    <li>Designation :
                                        <field name="designation"/>
                                    </li>
                                    <li>Status :
                                        <field name="status"/>
                                    </li>
                                    
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

   

</odoo>