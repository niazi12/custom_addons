<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="s_testimonial" name="Testimonial snippet">
    <section class="s_testimonial">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-4 text-center" style = "color: #5c3c35;">
                    <img alt="client" class="rounded-circle" src="/custom_theme/static/images/icon.png"/>
                    <h3>Bjit</h3>
                    
                </div>
                <div class="col-lg-4 text-center" style = "color: #5c3c35;">
                    <img alt="client" class="rounded-circle" src="/custom_theme/static/images/newscred.png"/>
                    <h3>NewsCred</h3>
                    
                </div>

                <div class="col-lg-4 text-center" style = "color: #5c3c35;">
                    <img alt="client" class="rounded-circle" src="/custom_theme/static/images/index.png"/>
                    <h3>Cefalo</h3>
                    
                </div>
            </div>
        </div>
    </section>
</template>

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="custom_theme.s_testimonial"
                t-thumbnail="/custom_theme/static/images/download.png"/>
    </xpath>
</template>
</odoo>